<h1>Listing events</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Text</th>
    <th>Private</th>
    <th>Receiver</th>
  </tr>

<% for event in @events %>
  <tr>
    <td><%=h event.type %></td>
    <td><%=h event.text %></td>
    <td><%=h event.private %></td>
    <td><%=h event.receiver_id %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

