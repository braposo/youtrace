<% content_for :headers do %>
 	<script type="text/javascript"><!--
	clickHeatSite = 'youtrace';clickHeatGroup = 'traces';clickHeatServer = 'http://localhost/clickheat/click.php';initClickHeat(); //-->
	</script>
<% end %>
<div class="tabs">
	<span class="back"><%= link_to "&larr; Back", :back %></span>
	<span class="active">Traces</span>
</div>
<div class="yui-g main">
  <div class="yui-u first">
	<div class="box">
  		<div class="box-header">	
			<%= image_tag 'mark.png', :class => 'mark' %>
			<h1>Traces</h1>
			<div class="box-options">
				<%= image_tag 'icons/layout.png', :size => '16x16', :class => 'layout', :tooltip => 'Switch view'  %>
				<%= image_tag 'icons/move.png', :size => '16x16', :class => 'move', :tooltip => 'Move box'  %>
				<%= image_tag 'icons/collapse.png', :size => '16x16', :class => 'collapse', :tooltip => 'Collapse/Expand'  %>
			</div>
		</div>
		<div class="box-content">
			<% if !@traces.empty? -%>
				<% @s = is_own?(@user.login)? 'owner' : 'user' %>
				<h2>You have submitted <strong><%= @traces.size %></strong> traces. Why don't you <%= link_to "add", new_trace_path %> some more traces?</h2>
				<div class="item-list">
				<% @traces.each do |t| -%>
				   	<%= render :partial => 'traces/trace_item', :locals => { :t => t, :s => @s}%>
				<% end -%>
				</div>
			<% else -%>
				<h2>It seems that you don't have traces. Want to <%= link_to "add", new_trace_path %> a new one?</h2>
			<% end -%>
		</div>
	</div>
  </div>
  <div class="yui-u">
	<div class="box">
  		<div class="box-header">	
			<%= image_tag 'mark.png', :class => 'mark' %>
			<h1>Personal map</h1>
			<div class="box-options">
				<%= image_tag 'icons/move.png', :size => '16x16', :class => 'move', :tooltip => 'Move box'  %>
				<%= image_tag 'icons/collapse.png', :size => '16x16', :class => 'collapse', :tooltip => 'Collapse/Expand'  %>
			</div>
		</div>
		<div class="box-content"><div id='map'></div></div>
	</div>
  </div>
</div>
<div class="box-shadow">
	<div class="box-shadow-left"></div>
	<div class="box-shadow-right"></div>
</div>