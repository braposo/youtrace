  <div class="login-box">
    <% if logged_in? -%>
      <p>You are now logged in as <%= link_to current_user.login, user_path(current_user) %>. (<%= link_to "logout", logout_path, { :title => "Log out" } %>)</p>
	  <p>Bellow you'll find some shortcuts and tips to the most common actions.</p>
    <% else -%>
      Welcome! Please <%= link_to "Log in", login_path, { :title => "Log in", :class => "modal" } %> or <%= link_to "Sign up", signup_path, { :title => "Sign up" } %>
    <% end -%>
  </div>

