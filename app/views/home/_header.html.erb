<div id="hd">
  <%= image_tag("header_alpha.png", :class => 'fl')  %>
  <ul class="menu fl">
    <li class="menu-item"><%= link_to_unless_current("Home", root_path){ |content| content_tag("span", content, :class => 'current')} -%></li>
    <li class="menu-item"><%= link_to_unless_current("Map", map_path){ |content| content_tag("span", content, :class => 'current')} -%></li>
    <li class="menu-item"><%= link_to_unless_current("Social", social_path){ |content| content_tag("span", content, :class => 'current')} -%></li>
    <li class="menu-item"><%= link_to_unless_current("How to", howto_path){ |content| content_tag("span", content, :class => 'current')} -%></li>
    <li class="menu-item"><%= link_to_unless_current("About", about_path){ |content| content_tag("span", content, :class => 'current')} -%></li>
  </ul>
  <div class="fr box">
    <% if logged_in? -%>
      Logged in as <%= link_to current_user.login, user_path(current_user.login) %> (<%= link_to "Log out", logout_path, { :title => "Log out" } %>)
    <% else -%>
      Welcome! Please <%= link_to "Log in", login_path, { :title => "Log in" } %> or <%= link_to "Sign up", signup_path, { :title => "Sign up" } %>
    <% end -%>
  </div>
</div>
